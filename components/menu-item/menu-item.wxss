/* components/menu-item/menu-item.wxss */
.menu-item {
  display: inline-block;
  width: 100%;
  height: 114px;
}

.top {
  position: relative;
}

.top .image {
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
  height: 114px;
}

.top .count {
  position: absolute;
  right: 5px;
  bottom: 10px;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0, 0, 0, .5);
}

.bottom {
  width: 100%;
  font-size: 26rpx;

  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}